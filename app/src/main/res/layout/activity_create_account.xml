<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createloginaccount"
    tools:context=".Activities.CreateAccountActivity">

    <EditText
        android:id="@+id/enternameid"
        android:layout_width="306dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/rectangle"
        android:ems="13"
        android:gravity="center"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enteremailid"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangle"
        android:ems="13"
        android:hint="@string/email"
        android:gravity="center"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enternameid" />

    <EditText
        android:id="@+id/enterpassid"
        android:layout_width="306dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rectangle"
        android:hint="@string/password"
        android:ems="13"
        android:inputType="textPassword"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enteremailid" />

    <EditText
        android:id="@+id/enterrepassid"
        android:layout_width="301dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:background="@drawable/rectangle"
        android:ems="13"
        android:inputType="textPassword"
        android:hint="@string/reenterpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterpassid" />

    <EditText
        android:id="@+id/entergenderid"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/rectangle"
        android:ems="5"
        android:gravity="center"
        android:hint="@string/gender"
        android:inputType="textCapWords"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterrepassid"
        app:layout_constraintVertical_bias="0.217" />

    <EditText
        android:id="@+id/enterageid"
        android:layout_width="147dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rectangle"
        android:ems="5"
        android:gravity="center"
        android:hint="@string/age"
        android:includeFontPadding="false"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/entergenderid"
        app:layout_constraintTop_toBottomOf="@+id/enterrepassid"
        app:layout_constraintVertical_bias="0.217" />

    <Button
        android:id="@+id/createcontinuebuttonid"
        android:layout_width="234dp"
        android:layout_height="51dp"
        android:background="@drawable/ovel"
        android:text="Continue !!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterrepassid"
        app:layout_constraintVertical_bias="0.884" />

</androidx.constraintlayout.widget.ConstraintLayout>