<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfAssismentQuestions.fourquestion"
    android:background="@drawable/questionnairquestions">

    <TextView
        android:id="@+id/questionfour"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="50dp"
        android:textColor="@color/Black"
        android:text="Did you come in contact with people who have the following symptoms in the last few days?"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/fouronefever"
        android:layout_below="@+id/questionfour"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:fontFamily="cursive"
        android:textSize="22dp"
        android:textColor="@color/Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fever" />

    <CheckBox
        android:id="@+id/fourtwocough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:text="Cough"
        android:fontFamily="cursive"
        android:textSize="22dp"
        android:textColor="@color/Pink"
        android:layout_below="@id/fouronefever"/>

    <CheckBox
        android:id="@+id/fourthreebreathlessness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textSize="22dp"
        android:textColor="@color/Pink"
        android:layout_marginLeft="45dp"
        android:layout_below="@id/fourtwocough"
        android:text="Breathlessness" />
    <CheckBox
        android:id="@+id/fournoneofthese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textSize="22dp"
        android:textColor="@color/Pink"
        android:layout_marginLeft="45dp"
        android:layout_below="@id/fourthreebreathlessness"
        android:text="None of These" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/forwardfour"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/forwardbutton" />


</RelativeLayout>